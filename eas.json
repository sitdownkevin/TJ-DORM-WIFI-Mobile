{
  "cli": {
    "version": ">= 14.2.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "androidManifest": "android/app/src/main/AndroidManifest.xml",
        "env": {
          "ANDROID_USES_CLEARTEXT_TRAFFIC": "true"
        }
      }
    }
  },
  "submit": {
    "production": {}
  }
}